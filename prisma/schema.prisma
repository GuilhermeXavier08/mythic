// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql" // Diz ao Prisma que estamos usando MySQL
  url      = env("DATABASE_URL")
}

// Modelo para a tabela de Usuários
// prisma/schema.prisma

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  name      String?
  username  String     @unique // <-- ADICIONE O @unique AQUI
  password  String
  createdAt DateTime   @default(now())
  purchases Purchase[]
}

// Modelo para a tabela de Jogos
model Game {
  id          String     @id @default(cuid())
  title       String
  description String
  price       Float
  imageUrl    String
  purchases   Purchase[]
}

// Modelo para a tabela de Compras (a "biblioteca" do usuário)
model Purchase {
  id          String   @id @default(cuid())
  userId      String
  gameId      String
  purchasedAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
  game Game @relation(fields: [gameId], references: [id])

  @@unique([userId, gameId]) // Garante que um usuário não pode comprar o mesmo jogo duas vezes
}